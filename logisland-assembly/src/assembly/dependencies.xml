<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
<!--        <format>tar.gz</format>-->
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>logisland-${project.version}</baseDirectory>

    <dependencySets>
        <!-- Write out all dependency artifacts to lib directory.
             This includes plugins (services...), that is plugin
             fatjars and not their dependencies, but also includes
             dependencies of the assembly pom that should be excluded !!! -->
        <dependencySet>
            <scope>runtime</scope>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <directoryMode>0770</directoryMode>
            <fileMode>0660</fileMode>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <excludes>
<!--                //TODO replace with include of all plugins...-->
<!--                //TODO eventually make lib/engines, lib/services, lib/processors, lib/connectors-->
<!--                //TODO or maybe lib/plugins-->
                <exclude>com.hurence.logisland:logisland-engine-spark_2_1</exclude>
                <exclude>com.hurence.logisland:logisland-engine-spark_2_3</exclude>
                <exclude>com.hurence.logisland:logisland-engine-spark_1_6</exclude>
                <exclude>com.hurence.logisland:logisland-engine-vanilla</exclude>
                <exclude>com.hurence.logisland:logisland-scripting-base</exclude>
                <exclude>com.hurence.logisland:logisland-scripting-mvel</exclude>
                <exclude>com.hurence.logisland:logisland-api</exclude>
                <exclude>com.hurence.logisland:logisland-utils</exclude>
                <exclude>com.hurence.logisland:logisland-bootstrap</exclude>
                <exclude>com.hurence.logisland:logisland-hadoop-utils</exclude>
                <exclude>com.hurence.logisland:logisland-plugin-support</exclude>
                <exclude>com.typesafe.scala-logging:scala-logging-*</exclude>
                <exclude>org.apache.logging.log4j:log4j-to-slf4j</exclude>
                <exclude>org.slf4j:slf4j-api</exclude>
            </excludes>
        </dependencySet>

        <dependencySet>
           <!-- This includes shared bits needed by all logisland components and
                their dependencies as well (additional jars) -->
           <scope>runtime</scope>
           <useProjectArtifact>false</useProjectArtifact>
           <outputDirectory>lib</outputDirectory>
           <directoryMode>0770</directoryMode>
           <fileMode>0660</fileMode>
           <useTransitiveFiltering>true</useTransitiveFiltering>
           <useTransitiveDependencies>true</useTransitiveDependencies>
           <includes>
               <include>com.hurence.logisland:logisland-api</include>
               <include>com.hurence.logisland:logisland-utils</include>
               <include>com.hurence.logisland:logisland-bootstrap</include>
               <include>com.hurence.logisland:logisland-hadoop-utils</include>
               <include>com.hurence.logisland:logisland-plugin-support</include>
               <include>com.hurence.logisland:logisland-scripting-base</include>
               <include>com.hurence.logisland:logisland-scripting-mvel</include>
               <include>com.typesafe.scala-logging:scala-logging-*</include>
               <include>org.apache.logging.log4j:log4j-to-slf4j</include>
               <include>org.slf4j:slf4j-api</include>
           </includes>
        </dependencySet>

        <dependencySet>
            <scope>runtime</scope>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib/engines</outputDirectory>
            <directoryMode>0770</directoryMode>
            <fileMode>0660</fileMode>
            <useTransitiveFiltering>true</useTransitiveFiltering>
           <includes>
               <include>com.hurence.logisland:logisland-engine-spark_2_3</include>
               <include>com.hurence.logisland:logisland-engine-spark_2_1</include>
               <include>com.hurence.logisland:logisland-engine-spark_1_6</include>
               <include>com.hurence.logisland:logisland-engine-vanilla</include>
           </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
<!--   Embed all resources in logisland-resources module  -->
        <fileSet>
            <directory>../logisland-resources/src/main/resources</directory>
            <fileMode>0644</fileMode>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <!--        If we want to add additional jars uncomment this and add jars in assembly module root directory -->
        <!--        <fileSet>-->
        <!--            <directory>${project.build.directory}</directory>-->
        <!--            <outputDirectory>./</outputDirectory>-->
        <!--            <includes>-->
        <!--                <include>*.jar</include>-->
        <!--            </includes>-->
        <!--        </fileSet>-->
    </fileSets>
    <files>
    </files>
</assembly>
